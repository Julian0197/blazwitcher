{
	"name": "blazwitcher",
	"displayName": "Blazwitcher: Search and Switcher in Blazing Speed",
	"version": "0.2.0",
	"description": "Blazwitcher is a local tool for searching tabs, bookmarks, and history, with support for fuzzy Pinyin search.",
	"author": "cjinhuo@qq.com",
	"scripts": {
		"dev": "plasmo dev ",
		"package": "plasmo build && plasmo package",
		"commit": "git add . && git cz"
	},
	"dependencies": {
		"@commitlint/config-conventional": "^19.2.2",
		"@douyinfe/semi-icons": "^2.62.0",
		"@douyinfe/semi-ui": "^2.62.0",
		"jotai": "^2.9.3",
		"plasmo": "0.89.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"styled-components": "^6.1.11",
		"text-search-engine": "1.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@changesets/cli": "^2.27.8",
		"@ianvs/prettier-plugin-sort-imports": "4.1.1",
		"@types/chrome": "0.0.268",
		"@types/node": "20.11.5",
		"@types/react": "18.2.48",
		"@types/react-dom": "18.2.18",
		"cz-git": "^1.9.4",
		"path-browserify": "^1.0.0",
		"typescript": "5.3.3",
		"url": "^0.11.0"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	},
	"manifest": {
		"host_permissions": [
			"https://*/*",
			"http://*/*"
		],
		"commands": {
			"_execute_action": {
				"suggested_key": {
					"default": "Ctrl+Period",
					"mac": "Command+Period"
				},
				"description": "Blazwitcher"
			}
		},
		"action": {
			"default_title": "Blazwitcher"
		},
		"permissions": [
			"tabs",
			"tabGroups",
			"bookmarks",
			"history",
			"storage",
			"windows",
			"favicon",
			"system.display",
			"sidePanel",
			"contextMenus"
		],
		"offline_enabled": true
	}
}
